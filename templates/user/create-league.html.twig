{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.name) }}
            </div>
            <div class="col">
                {{ form_row(form.maxNumberOfParticipants) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.isPrivate) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.password) }}
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}